<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mayaswell.digident.MainActivity">

    <ViewAnimator
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/viewAnimator"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        >
        <android.support.v7.widget.RecyclerView
            android:id="@+id/itemListView"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            />
        <RelativeLayout
            android:id="@+id/uploadPanel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/imageWidth"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginRight="@dimen/listItemTextMargin"
                android:adjustViewBounds="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_below="@+id/imageView"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/confidenceText"
                android:id="@+id/contentText"
                android:text=""
                android:ellipsize="end"
                style="@style/ItemText"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:id="@+id/confidenceText"
                android:layout_below="@+id/imageView"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="@dimen/listItemTextMargin"
                android:text=""
                style="@style/ConfidenceText"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/uploadItemButton"
                android:text="@string/upload_item"
                android:layout_below="@+id/confidenceText"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="@dimen/listItemTextMargin"
                android:layout_marginBottom="@dimen/listItemTextMargin"
                android:background="#ffffff"
                android:onClick="onClickTvShow"
                style="@style/UploadItemButton"
                />
        </RelativeLayout>
    </ViewAnimator>
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        />

</RelativeLayout>
